<div class="container">
  <div class="card">
      <div class="card-body">
        <h4 class="card-title">Haber Kısmı Ayarları</h4>
        <p class="card-description">
          Haber Kısmı
        </p>
        <form class="forms-sample" action="haberler" method="post" enctype="multipart/form-data">
          <div class="form-group row">
              <label for="exampleInputMobile" class="col-sm-3 col-form-label">Haber Başlık</label>
              <div class="col-sm-9">
                <input type="text" name="title" class="form-control" id="exampleInputMobile" placeholder="Haberler Başlık">
              </div>
            </div>
          <div class="form-group row">
            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Haber Açıklama</label>
            <div class="col-sm-9">
             
              <textarea id="hakkimizda_alt" name="desc" placeholder="Haber Açıklama"   rows="5" cols="100"></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label for="exampleInputMobile" class="col-sm-3 col-form-label">Haber Görseli</label>
            <div class="col-sm-9">
              <input class="form-control" type="file" name="image1" style="padding-bottom: 5%;">
          </div>
          </div>
          <div class="form-group row">
              <label for="exampleInputMobile" class="col-sm-3 col-form-label">Haber Sırası</label>
              <div class="col-sm-9">
                <input type="number" name="sira" class="form-control" id="exampleInputMobile" placeholder="Haber Sırası">
              </div>
            </div>
          <button type="submit" class="btn btn-primary me-2">Kaydet</button>
        </form>
      </div>
    </div>
  
    <div class="row">
      <div class="col-12">
          <table class="table table-image">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Haber Başlığı</th>
                <th scope="col">Haber Açıklaması</th>
                <th scope="col">Haber Görseli</th>
                <th scope="col">Sıra</th>
                <th>Yönet</th>
              </tr>
            </thead>
            <tbody>" "
              <% haberlers.forEach(function(haberitems) { %>
              <tr>
                <td st><%=haberitems.id %></td>
                <td><%=haberitems.title %></td>
                <td><textarea  id="hakkimizda_alt"  name="hakkimizda_alt" placeholder="<%=haberitems.desc %>"   rows="10" cols="50"></textarea>
                </td>
                 <td class=" ">
                  <img src="<%= haberitems.img %>" style="width: 250px; height: 250px;border-radius:0;" class="img-fluid img-thumbnail" alt="Sheep">
                </td>
                <td  class="w-25"><%= haberitems.sira %></td>
               <td>
                <form action="habersil" method="post">
                  <input type="hidden" value="<%= haberitems.id %>" name="haberid">
                <button type="submit" class="btn btn-danger">Sil</button>
              </form>
              </td>
              </tr>
              <% }); %>
            </tbody>
          </table>   
      </div>
    </div>
  </div>