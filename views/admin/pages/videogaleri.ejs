<div class="container">
    <div class="card">
        <div class="card-body">
          <h4 class="card-title">Video Galeri Ayarları</h4>
          <p class="card-description">
            Video Galeri Kısmı
          </p>
          <form class="forms-sample" action="videogaleri" method="post">
            <div class="form-group row">
                <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Video Başlık</label>
                <div class="col-sm-9">
                  <input class="form-control" type="text" name="videobaslik" style="padding-bottom: 5%;">
                </div>
              </div>
            <div class="form-group row">
              <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Video URL</label>
              <div class="col-sm-9">
                <input class="form-control" type="text" name="videourl" style="padding-bottom: 5%;">
              </div>
            </div>
            <div class="form-group row">
              <label for="exampleInputMobile" class="col-sm-3 col-form-label"><var>Video Sıra</var> Sırası</label>
              <div class="col-sm-9">
                <input type="number" class="form-control" id="exampleInputMobile" name="sira" placeholder="sıra">
              </div>
            </div>
            <button type="submit" class="btn btn-primary me-2">Kaydet</button>
          </form>
        </div>
      </div>
    
        <div class="row">
          <div class="col-12">
              <table class="table table-image">
                <thead>
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Video Başlığı</th>
                    <th scope="col">video</th>
                    <th scope="col">Sıra</th>
                    <th>Yönet</th>
                  </tr>
                </thead>
                <tbody>
                  <% videogalerisi.forEach(function(videogalerisiitem) { %>
                  <tr>
                    <td st><%=videogalerisiitem.id  %></td>
                    <td> <%=videogalerisiitem.videogaleri_title %></td>
                    <td class="">
                        <iframe width="500" height="300" src=" <%=videogalerisiitem.socialmedia_url%>" title="DAVACI - [Official Video] - Emre BİLKAY - [4K] #davacı" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>									

                    </td>
                    <td  class="w-25">3</td>
                    <td>
                       <form action="videgalerisil" method="post">
                      <input type="hidden" name="videoid" value="<%=videogalerisiitem.id%>">
                    <button type="submit" class="btn btn-danger">Sil</button></td>
                  </form>
                  </tr>
                  <% }); %>
                </tbody>
              </table>   
          </div>
        </div>
 
    </div>
